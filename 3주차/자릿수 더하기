function solution(n)
{
    var answer = 0;
    // n을 배열로 쪼개기위해 문자열로 변환 후 배열로 만들어줌
    answer = String(n).split('')
    // reduce를 이용해 배열로 만들기 위해 변환했던 문자열을 다시 숫자로 변환 후 더해준다
    // Number(v1)뒤 0은 최초 호출에서 첫 번째 인수에 제공하는 값
    // 숫자로 변환하기 전 초기 값은 문자열이므로 0을 넣어주지 않으면 오류 발생
    //초기값을 제공하지 않으면 배열의 첫 번째 요소를 사용합니다. 빈 배열에서 초기값 없이 reduce()를 호출하면 오류가 발생합니다.
    return answer.reduce((v, v1) => v + Number(v1),0 );
}
